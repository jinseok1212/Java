package quiz18;

public class Member implements Comparable<Member> {
    private int id;
    private String tier;
    private int x = 0;
    private int y = 0;
    public Member(int id, String tier) {
        this.id = id;
        this.tier = tier;
        if(tier.equals("골딱이")) {
        	this.y = 3;
        } else if(tier.equals("실버")) {
        	this.y = 2;
        } else {
        	this.y = 1;
        }
    }

    @Override
    public String toString() {
        return "Character{id=" + id + ", tier='" + tier + "'}";
    }

	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public String getTier() {
		return tier;
	}

	public void setTier(String tier) {
		this.tier = tier;
	}

	@Override
	public int compareTo(Member o) {
		if(o.getTier().equals("골딱이")) {
			this.y = 3;
		} else if(o.getTier().equals("실버")) {
			this.y = 2;
		} else {
			this.y = 1;
		}
			
		return Integer.compare(x, y);
	}
    
    
    
    
}


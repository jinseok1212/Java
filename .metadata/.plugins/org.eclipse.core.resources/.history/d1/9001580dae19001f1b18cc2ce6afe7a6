package quiz01;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner scan = new Scanner(System.in);
		int t = scan.nextInt();
		
		for(int i = 0; i < t; i++) {
			int r = scan.nextInt();
			String p = scan.next();
			String[] arr = p.split("");
			for(int j = 0, k = 0; j < r; j++) {
				System.out.print(arr[k]);
			}
		}
		
	}
}

